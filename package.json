{
  "name": "prisma-migrations-runner",
  "description": "Run Prisma migrations in code without the CLI",
  "homepage": "https://github.com/mitchellston/prisma-migrations-runner",
  "bugs": {
    "url": "https://github.com/mitchellston/prisma-migrations-runner/issues"
  },
  "author": {
    "name": "Mitchellston"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "module": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "bun run builder.ts",
    "publish": "npm publish ./dist",
    "publish:beta": "npm publish --tag beta ./dist",
    "publish:alpha": "npm publish --tag alpha ./dist",
    "prepublish": "bun install; bun run build; cp ./README.md ./dist/README.md; cp ./package.json ./dist/package.json; cp ./LICENSE ./dist/LICENSE"
  },
  "devDependencies": {
    "@types/node": "latest",
    "@types/bun": "latest",
    "bun-plugin-dts": "^0.3.0",
    "typescript": "^5"
  },
  "peerDependencies": {
    "@prisma/client": "*"
  },
  "license": "MIT",
  "keywords": [
    "prisma",
    "migrations",
    "cli"
  ]
}
